                        <i class="material-icons">search</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">
                            Tìm kiếm lớp
                        </h4>
                        <form action="/Lop/Search" method="get">-->
                    <!-- Normal Information -->
                    <!--<div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Tên lớp</label>
                                            <input type="text" class="form-control" name="TenLop" id="TenLop" required>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
