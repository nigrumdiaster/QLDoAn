
@using PagedList.Mvc
@model PagedList.IPagedList<QLDoAn.Models.EF.Tbl_GiaoVien>

@{
    ViewBag.Title = "Danh sách giáo viên";
    ViewBag.Navbar = "Kết quả tìm kiếm với tên giáo viên : "+ ViewBag.TenGiaoVien;
    Layout = "~/Views/Shared/_Layout.cshtml";
    int dem = 1;
    var tengiaovien = ViewBag.TenGiaoVien;

}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            @if (TempData["add_success"] != null)
            {
                <div class="alert alert-success text-center" id="AlertBox">
                    @TempData["add_success"]
                </div>
            }
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="card">
                    <div class="card-header card-header-icon" data-background-color="blue">
                        <i class="material-icons">search</i>
                    </div>
                    <div class="card-content">
                        <h4 class="card-title">
                            Tìm kiếm giáo viên
                        </h4>
                        <form action="/Teacher/Search" method="get">

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="col-md-4">
                                        <div class="form-group label-floating">
                                            <label class="control-label">Tên Giáo Viên : </label>
                                            <input type="text" class="form-control" name="TenGiaoVien" id="TenGiaoVien" >
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <button type="submit" class="btn btn-success btn-fill" id="btn_SearchDoAn">Tìm kiếm</button>
                                    </div>
                                </div>
                            </div>

                        </form>
                    </div>
